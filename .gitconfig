[user]
	email = morten.fyhn.amundsen@gmail.com
	name = Morten Fyhn Amundsen
[core]
	editor = subl -n -w
	pager = diff-so-fancy | less --tabs=4 -RFX
[fetch]
	prune = true
[help]
	autocorrect = 1
[color]
	ui = true
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[pull]
	ff = only
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[push]
	default = current
